
#include<stdio.h>
void accept(int *,int *);
void add(int,int,int *);
void display(int);
void main()
{
  int a,b;
  int sum=0;
  accept(&a,&b);
  add(a,b,&sum);
  display(sum);
}
void accept(int *a,int *b)
{
  printf("Enter the values for a and b\n");
  scanf("%d%d",a,b);
}
void add(int a,int b,int *sum)
{
  *sum=a+b;
}
void display(int sum)
{
   printf("The SUM is=%d",sum);
}



