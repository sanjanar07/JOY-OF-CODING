#include<stdio.h>
void main()
{
    int num;
    int d;
    printf("Enter the number\n");
    scanf("%d",&num);
    printf("The digit\n");
    while(num!=0)
    {
        d=num%10;
        if(d%2==0)
          printf("%d is even\n",d);
        else
          printf("%d is odd\n",d);
    
        num=num/10;
    }
}
